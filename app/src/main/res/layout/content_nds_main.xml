<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#66CDAA"
    tools:context="com.ogeniuspriority.nds.nds.NDS_main"
    tools:showIn="@layout/app_bar_nds_main">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Murakaza neza, ubu ni buryo mwashyiriweho ngo mubaze ibibazo birebana    "
        android:id="@+id/upper_hello_text"
        android:textSize="8pt"
        android:padding="20dp"
        android:gravity="center"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="100dp"
        android:background="#20B2AA"


        android:src="@drawable/next_nav"

        android:id="@+id/toggle_me"
        android:layout_centerVertical="true"

        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
         />

    <Button
        android:id="@+id/girinka"
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:layout_below="@+id/upper_hello_text"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:text="GIRINKA"
        android:textColor="#000"
        android:textSize="8pt" />

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="VUP"
        android:textSize="8pt"
        android:background="#fff"
        android:layout_marginTop="4dp"
        android:textColor="#000"
        android:id="@+id/vup"
        android:layout_below="@+id/girinka"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="MUTUELLE DE SANTE"
        android:textSize="8pt"
        android:id="@+id/mutuelle"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:textColor="#000"
        android:layout_below="@+id/vup"
        android:layout_alignLeft="@+id/vup"
        android:layout_alignStart="@+id/vup" />

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="UMURENGE SACCO"
        android:layout_marginTop="4dp"
        android:background="#fff"
        android:textColor="#000"
        android:textSize="8pt"
        android:id="@+id/umurenge_sacco"
        android:layout_below="@+id/mutuelle"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="100pt"
        android:layout_height="wrap_content"
        android:text="IBIBAZO BY&apos;ABATURAGE"
        android:background="#fff"
        android:textColor="#000"
        android:layout_marginTop="4dp"
        android:textSize="8pt"
        android:id="@+id/ibibazo"
        android:layout_below="@+id/umurenge_sacco"
        android:layout_centerHorizontal="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/forum_trigger"
        android:visibility="gone"
        android:clickable="true"
        android:src="@mipmap/forum_000"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/ibibazo"
        android:layout_alignStart="@+id/ibibazo" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/suggestion_trigger"
        android:visibility="gone"
        android:src="@mipmap/box_0000"
        android:layout_alignParentBottom="true"
        android:clickable="true"
        android:layout_alignRight="@+id/ibibazo"
        android:layout_alignEnd="@+id/ibibazo"
        android:layout_marginRight="40dp"
        android:layout_marginEnd="40dp" />


</RelativeLayout>
